
export PATH=$HOME/.bin:$HOME/privateroot/usr/bin:$HOME/privateroot/gnu/bin:/usr/local/bin:$PATH


# Homebrew:
if [ -f /usr/local/bin/brew ] ; then
    HOMEBREW_PATH=/usr/local
fi
if [ "$HOMEBREW_PATH" != '' ] ; then
    export PYTHONPATH=$HOMEBREW_PATH/lib/python2.7/site-packages:$PYTHONPATH
    export NODE_PATH=$HOMEBREW_PATH/lib/node_modules:$NODE_PATH
fi


# Orr:
if test -d "$HOME/privateroot/orr/orr_dir/bin" ; then
    export PATH=$HOME/privateroot/orr/orr_dir/bin:$PATH
fi


export PYTHONSTARTUP=$HOME/.pystartup


export EDITOR=vim


export PROFILE_SOURCED=1
