function! Snippets_shebang(key)
  let l:values = {
        \  'ruby': '#! /usr/bin/env ruby',
        \  'python': '#! /usr/bin/env python3',
        \  'bash': '#! /usr/bin/env bash',
        \  'sh': '#! /bin/sh',
        \}
  if has_key(l:values, &ft)
    call system('chmod +x ' . expand('%'))
    return l:values[&ft]
  endif
  return a:key
endfunction

let g:snippets = {
      \ '_': {
      \   'today': {-> strftime('%Y-%m-%d')},
      \   'now': {-> strftime('%Y-%m-%dT%H:%M:%S')},
      \   '#!': function('Snippets_shebang'),
      \ },
      \ 'html': {
      \   'start': "<!DOCTYPE HTML>\n<html>\n<head>\n<meta http-equiv=\"Content-Type\" content=\"text/html; charset=utf-8\" />\n</head>\n<body>\n</body>\n</html>",
      \ },
      \ 'python': {
      \   'ipy': 'from IPython import embed; embed(colors="neutral")',
      \   'ipython': 'from IPython import embed; embed(colors="neutral")',
      \   'pdb': 'import pdb;pdb.set_trace()',
      \   'ipdb': 'import ipdb;ipdb.set_trace()',
      \   'pd': 'import pdb;pdb.set_trace()',
      \   'pp': 'from pprint import pprint ; pprint()',
      \   'main': "def main():\n\n\n\<BS>if __name__ == '__main__'\n    main()",
      \ },
      \ 'ruby': {
      \   'frozen': '# frozen_string_literal: true',
      \   'fro': '# frozen_string_literal: true',
      \   'pry': 'binding.irb',
      \   'irb': 'binding.irb',
      \   'pp': "require 'pp'; pp ",
      \   'rspec': {-> 'RSpec.describe ' . substitute(substitute('_' . expand('%:t'), '_spec.rb', '', 0), '_\([a-z]\)', '\U\1', 'g') . " do\n" .
      \                'subject(:' . substitute(expand('%:t'), '_spec.rb', '', 0) . ") { described_class.new() }\n" .
      \                'end'},
      \ },
      \}

function Snip()
  let l:col = col('.')
  if l:col < 2
    return "\<tab>"
  endif
  let l:search = getline('.')[0:max([0, l:col - 2])]

  for l:ft in [&ft, '_']
    if has_key(g:snippets, l:ft)
      let l:x = g:snippets[l:ft]
      for k in keys(l:x)
        if match(l:search, '\<' . k . '$') != -1
          if type(l:x[k]) == v:t_func
            let l:v = l:x[k](k)
          else
            let l:v = l:x[k]
          endif
          return repeat("\<BS>", len(k)) . l:v
        endif
      endfor
    endif
  endfor

  return "\<tab>"
endfunction

inoremap <silent><script><expr> <tab> Snip()

imap <silent><script><expr> <C-X><C-X> copilot#Accept("")
