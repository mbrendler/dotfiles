function! LinterStatus() abort
  let l:errors = len(v:lua.vim.diagnostic.get(0, { 'severity': 1 }))
  let l:warnings = len(v:lua.vim.diagnostic.get(0, { 'severity': 2 }))
  let l:result = []
  if l:errors > 0
    call add(l:result, printf('E:%d', l:errors))
  endif
  if l:warnings > 0
    call add(l:result, printf('W:%d', l:warnings))
  endif
  if empty(l:result)
    return ""
  endif
  return ' ' . join(l:result, ',') . ' '
endfunction

set statusline=%<%f\ %h%m%r\ %1*%{LinterStatus()}%*\ %{tagbar#currenttag('%s','','f')}%=%-14.(%l,%c%V%)\ %P

set laststatus=2  " always show status line

