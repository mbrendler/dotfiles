[core]
	excludesfile = ~/.gitignore_global
[diff]
	compactionHeuristic = on
[difftool "kdiff3"]
	path = kdiff3
	trustExitCode = false
[alias]
	st = status
	ts = status
	ci = commit
	co = checkout
	out = log --graph --decorate --oneline origin/master..HEAD
	branches = branch -a -vv
        tags = tag --list
	kd = difftool --tool=kdiff3 --dir-diff --no-prompt
	cre = crecord
	crb = crebase
	glog = log --graph --decorate --oneline
        purge = clean -fd
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[include]
        path = ~/.gitconfig_local
[credential]
	helper = osxkeychain
